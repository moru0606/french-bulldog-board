<div class="comment-group">
    <div class="comment_group_item ">
        <div class="top_item">
            <% if comment.user.image? %>
            <%= image_tag comment.user.image.url, class: "rounded-circle", size: "70x70" %>
            <% else %>
            <%= image_tag "default.jpg", class: "rounded-circle", size: "70x70" %>
            <% end %>
        </div>
        <div class="comment_box">
            <div class="item_left">
                <p><b><%= link_to comment.user.name, comment.user, class: "link__name" %></b> :
                    <%= comment.created_at.to_s(:datetime_jp) %></p>
                <p><%= simple_format(comment.comment) %></p>
            </div>
            <div class="item_rigth">
                <% if logged_in? && current_user.id == comment.user_id %>
                <span><%= link_to '削除', [comment.post, comment],class: 'btn btn-outline-danger btn-sm',
                        method: :delete,
                        data: { confirm: "本当に削除してもよろしいですか？" } %></span>
                <% end %>
            </div>
        </div>
    </div>
</div>
