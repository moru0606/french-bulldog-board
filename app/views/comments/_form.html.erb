<%= form_with model:[ @post, @post.comments.build ], local:true do |f| %>

    <div class="form-group">
        <p>
            <%= f.label 'コメント (255文字未満)' %>
            <%= f.text_area :comment,class: 'form-control' %>
        </p>
    </div>
    <div class="form_action row">
        <%= f.submit 'コメント投稿',class: 'btn btn-primary' %>
    </div>

<% end %> 