<% if logged_in? %>
  <% if current_user.like?(post) %>
    <%= link_to post_likes_path(post), method: :delete, remoto: true do %>
      <i class="fas fa-heart unlike-btn"></i>
    <% end %>
  <% else %>
    <%= link_to post_likes_path(post.id), method: :post, remote: true do %>
      <i class="fas fa-heart like-btn"></i>
    <% end %>
  <% end %>
    <%= post.likes.count %>
  <% end %>