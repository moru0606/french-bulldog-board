<div class="top__items">
  <h1 class="text-center">投稿一覧</h1>
  <div class="ml-auto posts__linkBox">
    <%= form_with url: posts_path, method: :get, class: 'posts__searchForm' do %>
    <%= select_tag :category_id,
                      options_from_collection_for_select(Category.all, :id, :name, params[:category_id]),
                      {
                        prompt: 'カテゴリーから探す',
                        class: 'form-control posts_select',
                        onchange: 'submit(this.form);'
                      } %>
    <% end %>
    <%= link_to '新規投稿', new_post_path, class: 'btn btn-outline-primary post__indexNew' %>
  </div>
  <%= render "layouts/posts_list", posts: @posts %>
</div>
<%== pagy_bootstrap_nav(@pagy) %>