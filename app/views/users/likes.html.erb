<div class="top__items">
  <div class="card">
    <div class="card-header">
      <h3 class="card-title">お気に入り</h3>
    </div>
  <div class="card-body">
    
    <% if !@like_posts.empty? %>
      <p>お気に入り一覧</p>
      <% @like_posts.each do |post| %>
        <hr>
        <% if logged_in? %>
          <% if current_user.like?(post)  %> 
            <%=link_to post_likes_path(post), method: :delete do %>
            <i class="fas fa-heart unlike-btn"></i>
          <% end %>
          <% else %>
            <%=link_to post_likes_path(post), method: :post do %>
            <i class="fas fa-heart like-btn"></i>
          <% end %>
          <% end %>
        <% end %>
        <p>お気に入り投稿: <%= post.user.name %> : <%=link_to post.content, post_path(post.id), class: "link" %></p>
      <% end %>
    <% else %>
      <p>お気に入りの投稿はまだありません</p>
    <% end %>
    </div>
  </div>
</div>
<%= link_to '投稿一覧', posts_path, class: 'btn btn-outline-secondary' %>